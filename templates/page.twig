{% extends "base.twig" %}

{% block content %}
	<div class="content-wrapper">
		<article class="post-type-{{post.post_type}}" id="post-{{post.ID}}">
			<section class="article-content mx-2 lg:container lg:mx-auto">
				<h1 class="article-h1 m-8 text-4xl font-semibold text-center">{{post.title}}</h1>
				<div class="article-body">
					{{post.content}}
				</div>
			</section>
			<section class="archive-posts mx-2 lg:container lg:mx-auto">
				<div class="masonry">
					{% if archive_posts %}
						{% for post in function( 'masonry_order', archive_posts ) %}
							{% include ['tease-'~post.post_type~'.twig', 'tease.twig'] %}
						{% endfor %}
					{% endif %}
				</div>
			</section>
		</article>
	</div><!-- /content-wrapper -->
{% endblock %}